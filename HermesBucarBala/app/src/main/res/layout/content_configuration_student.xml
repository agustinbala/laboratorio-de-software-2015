<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/new_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:text="@string/title_student" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/student_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/configuration_title"
        android:text="@string/student_name_title" />
    <TextView
        android:id="@+id/student_name_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/configuration_content"
        />
    <TextView
        android:id="@+id/student_last_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/configuration_title"
        android:text="@string/student_last_name_title" />
    <TextView
        android:id="@+id/student_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/configuration_content"
         />
    <TextView
        android:id="@+id/student_fame_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/configuration_title"
        android:text="@string/student_fame_title" />

    <TextView
        android:id="@+id/student_fame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/configuration_content"
        />

    <TextView
        android:id="@+id/student_picture_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/configuration_title"
        android:text="@string/student_picture_title" />

    <TextView
        android:id="@+id/student_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/configuration_content"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/student_categorias_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/configuration_title"
            android:text="@string/student_category_title" />

        <CheckBox android:id="@+id/checkbox_pista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/configuration_content"
            android:layout_marginLeft="5dp"
            android:text="@string/pista"
            android:onClick="onCheckboxClicked"/>

        <CheckBox android:id="@+id/checkbox_establo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/establo"
            android:layout_marginLeft="5dp"
            style="@style/configuration_content"
            android:onClick="onCheckboxClicked"/>

        <CheckBox android:id="@+id/checkbox_necesidades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/necesidades"
            style="@style/configuration_content"
            android:layout_marginLeft="5dp"
            android:onClick="onCheckboxClicked"/>

        <CheckBox android:id="@+id/checkbox_emociones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/emociones"
            style="@style/configuration_content"
            android:layout_marginLeft="5dp"
            android:onClick="onCheckboxClicked"/>
    </LinearLayout>

</LinearLayout>